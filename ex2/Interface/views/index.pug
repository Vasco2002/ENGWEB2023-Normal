extends layout

block content
  .w3-card-4
    header.w3-indigo
      h1 Lista de Plantas

    .w3-container
      table.w3-table-all
        tr
          th Id
          th Freguesia
          th Espécie
          th Estado
          th Número de Intervenções

        each l in lists 
          tr
            td
              a(href=`http://localhost:15031/${l._id}`)= l._id
            td=l.freguesia 
            td=l.especie 
            td
              a(href=`http://localhost:15031/especies/${l._id}`)= l.especie
            td=l.numeroIntervencoes

  footer.w3-container.w3-indigo 
    address Generated by plantas::EngWeb2023 em #{d}